@model System.Data.DataTable
@{
    ViewBag.Title = "Index";
}

<div class="container">
    <a href="@Url.Action("Create", "Film")" class="btn btn-primary btn-lg active" role="button" aria-pressed="true">Add Film</a>
</div>
<br />
<div class="container">
    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Distributor</th>
                <th scope="col">Genre</th>
                <th scope="col">Year</th>
                <th scope="col">Country</th>
                <th scope="col">Duration</th>
                <th scope="col">Trailer</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Rows.Count; i++)
            {
                <tr>
                    <td scope="row">@Model.Rows[i][1]</td>
                    <td scope="row">@Model.Rows[i][2]</td>
                    <td scope="row">@Model.Rows[i][3]</td>
                    <td scope="row">@Model.Rows[i][4]</td>
                    <td scope="row">@Model.Rows[i][5]</td>
                    <td scope="row">@Model.Rows[i][6]</td>
                    <td scope="row">@Model.Rows[i][7]</td>
                    <td>
                        <a href="@Url.Action("Edit", "Film", new {@id = @Model.Rows[i][0] })" class="btn btn-info" role="button">Edit </a>
                        <a href="@Url.Action("Delete", "Film", new {@id = @Model.Rows[i][0] })" class="btn btn-danger" role="button">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

